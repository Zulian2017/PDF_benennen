      if '.ppm' in file and 'image' not in file:
        os.rename(PATH + file, PATH + 'image' + str(i) + '-' + str(j) + '.ppm')
        print(j)
        j += 1
  j = 0
  print("3")
  f = open(PATH +'result{}.txt'.format(i), 'w')
  #instr = open(PATH +'instrumente.txt')
